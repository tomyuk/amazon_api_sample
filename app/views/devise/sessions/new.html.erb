<h2><%= t("Log in") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class ="form-horizontal">
    <div class="form-group">
      <%= f.label :email, for: "user_email", class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, for: :user_password, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <!--
      <div class="form-group">
        <%= f.check_box :remember_me, class: "form-control" %>
        <%= f.label :remember_me, class: "control-label" %>
      </div>
      -->
    <% end -%>
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  </div>
<% end %>
